<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsMovies"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/back_key"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/material_on_background_disabled"
            android:src="@mipmap/arrow"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/title_raw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:translationX="120dp"
            android:translationY="170dp"
            android:maxLines="2"/>
        <ImageView
            android:id="@+id/actual_photo"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:background="@color/black"
            android:translationY="150dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/ratings_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.0"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:translationX="120dp"
            android:translationY="210dp" />

        <TextView
            android:id="@+id/release_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-1-1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:translationX="270dp"
            android:translationY="210dp" />

        <RatingBar
            android:id="@+id/RaihanBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:numStars="5"
            android:translationX="120dp"
            android:translationY="218dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:id="@+id/description_of_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:maxLines="7"
            android:minLines="6"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:translationY="290dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cast_of_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:translationY="480dp" />


    </RelativeLayout>

</LinearLayout>